# Environment Configuration
ENVIRONMENT=development

# FastAPI App Configuration
APP_TITLE=Deko Assistant AI API
APP_DESCRIPTION=Deko Assistant AI API is an AI-powered application where users can get decoration suggestions.
APP_VERSION=1.0.0
ALLOWED_ORIGINS=http://localhost:3000
SECRET_KEY=your_secret_key_here

# Database Configuration
DB_HOST=YOUR_VDS_IP
DB_PORT=5432
DB_NAME=dekodb
DB_USER=dekouser
DB_PASSWORD=your_postgresql_password

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GENERATIVE_MODEL_NAME=gemini-2.0-flash-exp

# Imagen 4 Configuration
IMAGEN_MODEL_NAME=imagen-3.0-generate-001
IMAGEN_API_ENDPOINT=https://us-central1-aiplatform.googleapis.com

# Google Cloud Authentication (Imagen i√ßin gerekli)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# Server Configuration
DEV_HOST=127.0.0.1
DEV_PORT=8000
DEV_RELOAD=true

PROD_HOST=0.0.0.0
PROD_PORT=8000
PROD_RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=\n%(asctime)s - %(levelname)s - %(message)s
LOG_FILE=logs/deko_assistant.log
LOG_BACKUP_COUNT=7
LOG_ENCODING=utf-8
